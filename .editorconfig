# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Hugo templates
[*.html]
indent_size = 2

# CSS
[*.css]
indent_size = 2

# JavaScript
[*.js]
indent_size = 2

# Python scripts
[*.py]
indent_size = 4

# TOML configuration
[*.toml]
indent_size = 2

# JSON data
[*.json]
indent_size = 2

# Markdown content
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
